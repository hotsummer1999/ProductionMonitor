<UserControl
    x:Class="ProductionMonitor.UserControls.RaderChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductionMonitor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="LayGrid">
        <!--  画布  -->
        <Canvas x:Name="raderCanvas" />
        <!--  规则多边形  -->
        <Polygon
            x:Name="P1"
            Stroke="#22ffffff"
            StrokeThickness="2" />
        <Polygon
            x:Name="P2"
            Stroke="#22ffffff"
            StrokeThickness="2" />
        <Polygon
            x:Name="P3"
            Stroke="#22ffffff"
            StrokeThickness="2" />
        <Polygon
            x:Name="P4"
            Stroke="#22ffffff"
            StrokeThickness="2" />
        <!--  数据多边形  -->
        <Polygon
            x:Name="Data"
            Fill="#550091F0"
            Stroke="Yellow"
            StrokeThickness="1" />
    </Grid>
</UserControl>