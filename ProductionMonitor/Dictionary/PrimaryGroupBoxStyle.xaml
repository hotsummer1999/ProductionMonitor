<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PrimaryGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Margin" Value="10,3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <!--  左上角  -->
                        <Polyline
                            Points="0,30 0,10 10,0 30,0"
                            Stroke="#9918aabd"
                            StrokeThickness="1" />
                        <Ellipse
                            Width="4"
                            Height="4"
                            Margin="20,-2,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#9918aabd"
                            StrokeThickness="1" />
                        <Ellipse
                            Width="4"
                            Height="4"
                            Margin="-2,20,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#9918aabd"
                            StrokeThickness="1" />
                        <!--  右上角  -->
                        <Path
                            HorizontalAlignment="Right"
                            Data="M0,0 10,0 15,3 35,3 40,0 45,5 45,20 M15,0 35,0"
                            Stroke="#9918aabd"
                            StrokeThickness="1" />
                        <!--  左下角  -->
                        <Polyline
                            VerticalAlignment="Bottom"
                            Points="0,0 0,30 30,30"
                            Stroke="#9918aabd"
                            StrokeThickness="1" />
                        <!--  右下角  -->
                        <Polyline
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Points="0,0 20,0 25,-5 25,-30"
                            Stroke="#9918aabd"
                            StrokeThickness="1" />
                        <Polygon
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Fill="#9918aabd"
                            Points="22,0 25,-3 25,0"
                            StrokeThickness="1" />

                        <!--  边缘线  -->
                        <Border
                            Margin="30,-0.5,45,0"
                            Background="Transparent"
                            BorderBrush="#9918aabd"
                            BorderThickness="0,1,0,0" />

                        <Border
                            Margin="-0.5,30,0,30"
                            Background="Transparent"
                            BorderBrush="#9918aabd"
                            BorderThickness="1,0,0,0" />

                        <Border
                            Margin="30,0.5,25,0"
                            Background="Transparent"
                            BorderBrush="#9918aabd"
                            BorderThickness="0,0,0,1" />
                        <Border
                            Margin="0,20,0,30"
                            Background="Transparent"
                            BorderBrush="#9918aabd"
                            BorderThickness="0,0,1,0" />
                        <!--  Header旁样式  -->
                        <Path
                            Margin="15,20,0,0"
                            Data="M0,0 3,7,0,14"
                            Stroke="#9918aabd"
                            StrokeThickness="3" />
                        <Path
                            Margin="22,20,0,0"
                            Data="M0,0 3,7,0,14"
                            Stroke="#6618aabd"
                            StrokeThickness="3" />
                        <!--  Header  -->
                        <TextBlock
                            Margin="30,17,0,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{TemplateBinding Header}" />
                        <ScrollViewer
                            Margin="5,40,0,0"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden">
                            <ContentPresenter />
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>