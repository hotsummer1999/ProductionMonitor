<Page
    x:Class="ProductionMonitor.Views.Pages.WorkShopDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductionMonitor.Views.Pages"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:uc="clr-namespace:ProductionMonitor.UserControls"
    Title="WorkShopDetailPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:Key="PageLoadAnimation" TargetName="Page">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.5" />
            <ThicknessAnimation
                Storyboard.TargetProperty="Margin"
                From="0,50,0,-50"
                To="0,0,0,0"
                Duration="0:0:0.5" />
        </Storyboard>
    </Page.Resources>
    <Grid x:Name="Page">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Border Margin="10,5" Background="#1118aabd" />
            <Border
                Grid.Row="1"
                Margin="10,5"
                Background="#1118aabd" />
            <Button
                Width="75"
                Height="35"
                Margin="10,0,10,0"
                HorizontalAlignment="Left"
                Command="{Binding BackCommand}"
                Content="返回"
                DockPanel.Dock="Right"
                Focusable="False"
                Style="{StaticResource PrimaryButtonStyle}"
                Tag="&#xe604;" />
            <StackPanel
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="White"
                    Text="机台状态" />
                <RadioButton
                    Content="全部"
                    IsChecked="True"
                    Style="{StaticResource PrimaryRadioButtonStyle}" />
                <RadioButton Content="作业" Style="{StaticResource PrimaryRadioButtonStyle}" />
                <RadioButton Content="等待" Style="{StaticResource PrimaryRadioButtonStyle}" />
                <RadioButton Content="故障" Style="{StaticResource PrimaryRadioButtonStyle}" />
                <RadioButton Content="停机" Style="{StaticResource PrimaryRadioButtonStyle}" />
            </StackPanel>
        </Grid>
        <ScrollViewer
            Grid.Row="1"
            Margin="10,5"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Hidden">

            <ItemsControl Margin="20,10" ItemsSource="{Binding MachineList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Background="Transparent" Columns="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Height="320"
                            Margin="15,10"
                            Background="#1F38aabd"
                            TextBlock.FontFamily="/Resources/Fonts/#iconfont"
                            TextBlock.FontSize="13">
                            <Border BorderBrush="Transparent" BorderThickness="1,0,0,0" />
                            <Border BorderBrush="Transparent" BorderThickness="0,0,1,0" />
                            <Border BorderBrush="Transparent" BorderThickness="0,0,0,1" />
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="5*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border
                                    Background="#0a18aabd"
                                    BorderBrush="#99ffccbd"
                                    BorderThickness="0,1,0,0" />

                                <Grid Margin="10" VerticalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Left" Foreground="White">
                                        <Run Text="&#xe60d;" />
                                        <Run Text="{Binding MachineName}" />
                                    </TextBlock>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Border
                                            Width="10"
                                            Height="10"
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BorderBrush="{Binding MachineStatus, Converter={StaticResource MachineStatusToColorConverter}}"
                                            BorderThickness="5"
                                            CornerRadius="5" />
                                        <TextBlock Foreground="White">

                                            <Run Foreground="White" Text="{Binding MachineStatus}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <uc:PercentRing Percent="{Binding FinishPercent}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="LightGray" Text="任务状态:  " />
                                        <Border BorderBrush="{Binding MachineStatus, Converter={StaticResource MachineStatusToColorConverter}}" BorderThickness="1">
                                            <TextBlock
                                                Padding="5,1"
                                                Foreground="{Binding MachineStatus, Converter={StaticResource MachineStatusToColorConverter}}"
                                                Text="{Binding MachineStatus}" />
                                        </Border>
                                    </StackPanel>

                                    <Button
                                        HorizontalAlignment="Right"
                                        Background="Transparent"
                                        Command="{Binding DataContext.OpenDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        Content="[详情]"
                                        Foreground="White" />
                                </Grid>
                                <Grid Grid.Row="3" Margin="5">
                                    <TextBlock>
                                        <Run
                                            FontSize="12"
                                            Foreground="LightGray"
                                            Text="任务进度:" />
                                        <Run
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{Binding FinishNum}" />
                                        <Run
                                            FontSize="12"
                                            Foreground="White"
                                            Text="/" />
                                        <Run
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{Binding PlanNum}" />
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="4" Margin="5">
                                    <TextBlock>
                                        <Run
                                            FontSize="12"
                                            Foreground="LightGray"
                                            Text="工单:" />
                                        <Run
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{Binding CurrentWorkOrder}" />
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border
            Grid.RowSpan="2"
            Background="#22ffffff"
            Visibility="{Binding DetailVisibility}">
            <Border
                x:Name="Detail"
                Margin="20,0"
                VerticalAlignment="Bottom"
                Background="White"
                BorderBrush="#aabdfaaa"
                BorderThickness="0,1,0,0"
                Style="{StaticResource FadeInStoryBoard}"
                Visibility="{Binding DetailVisibility}">

                <Grid Height="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#555"
                        Text="设备效率趋势图" />
                    <Button
                        Width="40"
                        Height="35"
                        Margin="5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding CloseDetailCommand}"
                        Content="&#xe6b9;"
                        FontFamily="/Resources/Fonts/#iconfont"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#555"
                        Style="{StaticResource OperateButtonStyle}" />
                    <Grid Grid.Row="1">
                        <StackPanel
                            Margin="40,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Border
                                Width="10"
                                Height="10"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderBrush="LightGreen"
                                BorderThickness="5"
                                CornerRadius="5" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run
                                    FontSize="16"
                                    Foreground="Black"
                                    Text="作业" />
                            </TextBlock>
                            <Border
                                Width="10"
                                Height="10"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderBrush="Orange"
                                BorderThickness="5"
                                CornerRadius="5" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run
                                    FontSize="16"
                                    Foreground="Black"
                                    Text="等待" />
                            </TextBlock>
                            <Border
                                Width="10"
                                Height="10"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderBrush="IndianRed"
                                BorderThickness="5"
                                CornerRadius="5" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run
                                    FontSize="16"
                                    Foreground="Black"
                                    Text="故障" />
                            </TextBlock>
                            <Border
                                Width="10"
                                Height="10"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderBrush="LightGray"
                                BorderThickness="5"
                                CornerRadius="5" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run
                                    FontSize="16"
                                    Foreground="Black"
                                    Text="停机" />
                            </TextBlock>
                        </StackPanel>
                        <StackPanel
                            Margin="50,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <RadioButton
                                Content="当日"
                                IsChecked="True"
                                Style="{StaticResource PrimaryRadioButtonStyle}" />
                            <RadioButton Content="当周" Style="{StaticResource PrimaryRadioButtonStyle}" />
                            <RadioButton Content="当月" Style="{StaticResource PrimaryRadioButtonStyle}" />
                            <RadioButton Content="当年" Style="{StaticResource PrimaryRadioButtonStyle}" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2" Margin="20,10">
                        <lvc:CartesianChart>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="21-12,22-01,22-02,22-03,22-04,22-05,22-06,22-07,22-08,22-09,22-10,22-11,22-12,23-01">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" StrokeThickness="0" />
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis
                                    MaxWidth="10"
                                    MaxValue="100"
                                    MinValue="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Stroke="#08000000" />
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>

                            <lvc:CartesianChart.Series>
                                <lvc:StackedColumnSeries
                                    Title="作业"
                                    Fill="LightGreen"
                                    MaxColumnWidth="15"
                                    StrokeThickness="0"
                                    Values="34.01,11.25,22.25,36.25,17.25,43.25,77.25,32.25,5.25,9.25,17.25,23.25,80.25,46.25" />
                                <lvc:StackedColumnSeries
                                    Title="故障"
                                    Fill="IndianRed"
                                    MaxColumnWidth="15"
                                    StrokeThickness="0"
                                    Values="22.01,34.25,22.25,36.25,17.25,43.25,77.25,32.25,5.25,9.25,17.25,23.25,80.25,46.25" />
                                <lvc:StackedColumnSeries
                                    Title="等待"
                                    Fill="Orange"
                                    MaxColumnWidth="15"
                                    StrokeThickness="0"
                                    Values="22.01,34.25,22.25,36.25,17.25,43.25,77.25,32.25,5.25,9.25,17.25,23.25,80.25,46.25" />
                                <lvc:StackedColumnSeries
                                    Title="停机"
                                    Fill="LightGray"
                                    MaxColumnWidth="15"
                                    StrokeThickness="0"
                                    Values="22.01,34.25,22.25,36.25,17.25,43.25,77.25,32.25,5.25,9.25,17.25,23.25,80.25,46.25" />
                            </lvc:CartesianChart.Series>
                        </lvc:CartesianChart>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>