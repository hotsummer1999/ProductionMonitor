<Window
    x:Class="ProductionMonitor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductionMonitor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="生产执行系统"
    Width="1200"
    Height="750"
    prism:ViewModelLocator.AutoWireViewModel="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <RadialGradientBrush.Center>0.5,0.5</RadialGradientBrush.Center>
                <GradientStop Offset="0" Color="#285173" />
                <GradientStop Offset="1" Color="#244767" />
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Border BorderBrush="#5518aabd" BorderThickness="0,0,0,1" />
        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image
                Width="35"
                Height="35"
                Source="/Resources/Images/logo.jpg" />

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock
                    FontSize="16"
                    Foreground="White"
                    Text="生产监控平台" />
                <TextBlock
                    Margin="0,3,0,0"
                    FontSize="10"
                    Foreground="White"
                    Text="道阻且长，行则降至,道阻且长，行则降至,道阻且长，行则降至" />
            </StackPanel>
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Height="Auto"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button
                        Command="{Binding MinimizeCommand}"
                        Content="&#xe65a;"
                        Style="{StaticResource OperateButtonStyle}" />
                    <Button
                        Command="{Binding MaxmizeCommand}"
                        Content="&#xe653;"
                        Style="{StaticResource OperateButtonStyle}" />
                    <Button
                        Background="DarkRed"
                        Command="{Binding CloseCommand}"
                        Content="&#xe6b9;"
                        Style="{StaticResource OperateButtonStyle}" />
                </StackPanel>
                <Border
                    Grid.Row="1"
                    BorderBrush="#5518aabd"
                    BorderThickness="0,1,0,0">
                    <Border.Background>
                        <VisualBrush
                            TileMode="FlipXY"
                            Viewport="0,0,5,5"
                            ViewportUnits="Absolute">
                            <VisualBrush.Visual>
                                <Line
                                    Stroke="Gray"
                                    StrokeThickness="1"
                                    X1="0"
                                    X2="5"
                                    Y1="0"
                                    Y2="5" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </Grid>
        <DockPanel Grid.Row="1">
            <Frame
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                prism:RegionManager.RegionName="ContentRegion"
                NavigationUIVisibility="Hidden" />
        </DockPanel>
        <Border
            Grid.Row="2"
            BorderBrush="#5518aabd"
            BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0">
                    <Border.Background>
                        <VisualBrush
                            TileMode="FlipXY"
                            Viewport="0,0,5,5"
                            ViewportUnits="Absolute">
                            <VisualBrush.Visual>
                                <Line
                                    Stroke="Gray"
                                    StrokeThickness="1"
                                    X1="0"
                                    X2="5"
                                    Y1="0"
                                    Y2="5" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Border.Background>
                </Border>
                <TextBlock
                    Grid.Column="1"
                    Margin="20,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White">
                    系统版本 1.0.0
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>